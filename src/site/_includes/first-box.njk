<section class="vf-grid | vf-grid__col-2 | main-bar">
    <main class="news-container">
      <h4 class="vf-section-header__heading">INsites</h4>
      <div class="insites">
        {% for item in news.items %}
                <hr class="vf-divider">
        <div class="news-image">
          <img src="https://intranet.embl.de/communication_outreach/internal_news/2019/{{ item.image }}"
            class="image-ov">
        </div>
        <div class="news-text">
          <p class="article-date">{{item.date}}</p>
          <a href="{{ item.url }}">
            <h5 class="article-title">{{ item.title }}</h5>
          </a>
          <p class="crop">{{item.description}}</p>
          </br>
        </div>
        {% endfor %}
        <a href="#" class="vf-link vf-link--hover | see-more">Read all news >></a>
      </div>
    </main>
